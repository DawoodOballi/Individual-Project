<Window x:Class="OvertimeWPF.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OvertimeWPF"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800" FontSize="14" Background="#FF8DBDD8">
    <Border Background="White" CornerRadius="20" Margin="40">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="#FF8CC0FF" FontSize="40" HorizontalAlignment="Center"/>
            <Separator Height="10" Background="#FF8DBDD8"/>
            <StackPanel Width="200" Height="200" Margin="20">
                <Label Content="Username" Foreground="#FF8CC0FF" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,65,0,0" />
                <TextBox x:Name="txtUsername" FontSize="18" Background="White" Foreground="#FF8CC0FF" BorderBrush="#FF8DBDD8"/>
                <Button Name="btnSubmit" Content="Submit" Margin="0,5,0,0" Width="60" Background="#FF8DBDD8" Foreground="White" Click="btnSubmit_Click"/>
            </StackPanel>
        </StackPanel>
        
    </Border>
</Window>
