<Page x:Class="OvertimeWPF.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OvertimeWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
             Title="LogIn" Height="450" Width="800" FontSize="14" Background="#FF8DBDD8">
    <Grid>
        <Border Background="White" CornerRadius="20" Margin="40">
            <StackPanel Margin="20">
                <Label Content="Login" Foreground="#FF8CC0FF" FontSize="40" HorizontalAlignment="Center"/>
                <Separator Height="10" Background="#FF8DBDD8"/>
                <StackPanel Width="200" Height="200" Margin="20">
                    <Label Content="Username" Foreground="#FF8CC0FF" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,65,0,0" />
                    <TextBox x:Name="txtUsername" FontSize="18" Background="White" Foreground="#FF8CC0FF" BorderBrush="#FF8DBDD8" TextChanged="txtUsername_TextChanged"/>
                    <Button Name="btnSubmit" Content="Submit" Margin="0,5,0,0" Width="60" Background="#FF8DBDD8" Foreground="White" Click="btnSubmit_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Frame Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
